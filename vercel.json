{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    },
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/main.py" },
    { "src": "/health", "dest": "/api/main.py" },
    { "src": "/en/docs/(.*)", "dest": "/docs/$1" },
    { "src": "/en/(.*)", "dest": "/$1" },
    { "src": "/en", "dest": "/" },
    { "handle": "filesystem" }
  ]
}
