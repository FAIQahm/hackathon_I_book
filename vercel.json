{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    },
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/main.py" },
    { "source": "/health", "destination": "/api/main.py" }
  ],
  "redirects": [
    { "source": "/en/docs/:path*", "destination": "/docs/:path*", "permanent": false },
    { "source": "/en/:path*", "destination": "/:path*", "permanent": false },
    { "source": "/en", "destination": "/", "permanent": false }
  ]
}
